# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Application
PORT=3000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Replace the example secrets below with strong, cryptographically secure values
# for any non-development environment. You can generate a secure secret with, for example:
#   openssl rand -base64 32
# or:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_ACCESS_SECRET=your-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production
JWT_EMAIL_VERIFICATION_SECRET=your-jwt-email-verification-secret
JWT_PASSWORD_RESET_SECRET=your-jwt-password-reset-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_EMAIL_VERIFICATION_EXPIRATION=24h
JWT_PASSWORD_RESET_EXPIRATION=1h

# Email Configuration
# Leave empty to use Ethereal (test email service) in development
# For production, use a real SMTP service (Gmail, SendGrid, AWS SES, etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM="MyInsatEvents" <noreply@myinsatevents.tn>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:4200
